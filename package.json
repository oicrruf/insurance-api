{
  "name": "insurance-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www",
    "env": "sync-dotenv",
    "prepare": "husky install",
    "test": "jest --verbose --detectOpenHandles",
    "format": "npx prettier --write . && git add ."
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.15"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "prettier": "2.6.2",
    "supertest": "^6.2.2",
    "sync-dotenv": "^2.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run env && git add ."
    }
  }
}
